# HTML
text/html; xdg-open '%s' &; nametemplate=%s.html; test=test -n "$DISPLAY"; 
text/html; w3m -I %{charset} -T text/html; copiousoutput;
text/plain; vim %s

#PDFs
application/pdf; xdg-open %s

#Images
image/png; /usr/bin/feh %s
image/jpeg; /usr/bin/feh %s

